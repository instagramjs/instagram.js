{
  "name": "@igjs/realtime",
  "version": "0.1.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm gen:thrift",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "gen:thrift": "tsx scripts/thrift-codegen.ts",
    "typecheck": "tsc --noEmit",
    "dev": "pnpm build --watch",
    "prebuild": "pnpm gen:thrift",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --no-splitting"
  },
  "devDependencies": {
    "@creditkarma/thrift-typescript": "catalog:",
    "@igjs/eslint-config": "workspace:*",
    "@igjs/prettier-config": "workspace:*",
    "@igjs/tsconfig": "workspace:*",
    "@swc/core": "catalog:",
    "@t3-oss/env-core": "catalog:",
    "@types/eslint": "catalog:",
    "@types/node": "catalog:",
    "@types/node-int64": "catalog:",
    "@types/thrift": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "glob": "catalog:",
    "mqtts": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "dependencies": {
    "@igjs/api-types": "workspace:*",
    "@igjs/mqttot": "workspace:*",
    "eventemitter3": "catalog:",
    "node-int64": "catalog:",
    "pino": "catalog:",
    "thrift": "catalog:",
    "tsx": "catalog:",
    "zod": "catalog:"
  },
  "prettier": "@igjs/prettier-config"
}